@{
    ViewData["Title"] = "Моят профил - World Family";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary">
                <i class="fas fa-tachometer-alt me-2"></i>Моят профил
            </h1>
            <div>
                <span class="badge bg-success">
                    <i class="fas fa-user me-1"></i>Активен потребител
                </span>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <a asp-area="" asp-controller="FamilyMvc" asp-action="Create" class="card text-decoration-none h-100">
                    <div class="card-body text-center text-primary">
                        <i class="fas fa-plus-circle fa-3x mb-2"></i>
                        <h6 class="card-title">Създай семейство</h6>
                    </div>
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a asp-area="" asp-controller="FamilyMvc" asp-action="Index" class="card text-decoration-none h-100">
                    <div class="card-body text-center text-primary">
                        <i class="fas fa-users fa-3x mb-2"></i>
                        <h6 class="card-title">Всички семейства</h6>
                    </div>
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a href="#" class="card text-decoration-none h-100">
                    <div class="card-body text-center text-primary">
                        <i class="fas fa-camera fa-3x mb-2"></i>
                        <h6 class="card-title">Качи снимки</h6>
                    </div>
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a href="#" class="card text-decoration-none h-100">
                    <div class="card-body text-center text-primary">
                        <i class="fas fa-book fa-3x mb-2"></i>
                        <h6 class="card-title">Моите истории</h6>
                    </div>
                </a>
            </div>
        </div>

        <!-- User Stats -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h2 class="display-6">3</h2>
                        <p class="mb-0">Моите семейства</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h2 class="display-6">25</h2>
                        <p class="mb-0">Семейни членове</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h2 class="display-6">12</h2>
                        <p class="mb-0">Качени снимки</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h2 class="display-6">8</h2>
                        <p class="mb-0">Написани истории</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-clock me-2"></i>Последна активност
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="activity-item d-flex align-items-center mb-3">
                            <div class="activity-icon bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-plus"></i>
                            </div>
                            <div>
                                <strong>Създадохте семейство "Петрови"</strong><br>
                                <small class="text-muted">преди 2 дни</small>
                            </div>
                        </div>
                        
                        <div class="activity-item d-flex align-items-center mb-3">
                            <div class="activity-icon bg-success text-white rounded-circle p-2 me-3">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div>
                                <strong>Добавихте член "Мария Петрова"</strong><br>
                                <small class="text-muted">преди 3 дни</small>
                            </div>
                        </div>
                        
                        <div class="activity-item d-flex align-items-center">
                            <div class="activity-icon bg-info text-white rounded-circle p-2 me-3">
                                <i class="fas fa-camera"></i>
                            </div>
                            <div>
                                <strong>Качихте 5 нови снимки</strong><br>
                                <small class="text-muted">преди 1 седмица</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Info -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-user me-2"></i>Профилна информация
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <i class="fas fa-user-circle fa-5x text-muted"></i>
                        </div>
                        <p><strong>Име:</strong> @User.Identity.Name</p>
                        <p><strong>Роля:</strong> @(User.IsInRole("Admin") ? "Администратор" : "Потребител")</p>
                        <p><strong>Регистрация:</strong> @DateTime.Now.AddDays(-30).ToString("dd.MM.yyyy")</p>
                        <a href="#" class="btn btn-outline-primary w-100">
                            <i class="fas fa-edit me-2"></i>Редактирай профил
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>