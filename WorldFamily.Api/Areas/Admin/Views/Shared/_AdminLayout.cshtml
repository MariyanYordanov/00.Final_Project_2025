<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - World Family Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body class="admin-body">
    
    <!-- Admin Sidebar -->
    <div class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <div class="d-flex align-items-center">
                <i class="fas fa-shield-alt text-warning me-2"></i>
                <h5 class="mb-0 text-white">Admin Panel</h5>
            </div>
            <button class="btn btn-link text-white d-lg-none" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <div class="sidebar-content">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                       href="/admin">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")" 
                       href="/admin/dashboard/users">
                        <i class="fas fa-users me-2"></i>
                        Users
                        <span class="badge bg-primary ms-auto">@(ViewBag.TotalUsers ?? 0)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Families" ? "active" : "")" 
                       href="/admin/dashboard/families">
                        <i class="fas fa-home me-2"></i>
                        Families
                        <span class="badge bg-success ms-auto">@(ViewBag.TotalFamilies ?? 0)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")" 
                       href="/admin/dashboard/reports">
                        <i class="fas fa-chart-bar me-2"></i>
                        Reports
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")" 
                       href="/admin/dashboard/settings">
                        <i class="fas fa-cog me-2"></i>
                        Settings
                    </a>
                </li>
            </ul>
            
            <hr class="sidebar-divider">
            
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/backup">
                        <i class="fas fa-database me-2"></i>
                        Backup & Restore
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/logs">
                        <i class="fas fa-file-alt me-2"></i>
                        System Logs
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/maintenance">
                        <i class="fas fa-tools me-2"></i>
                        Maintenance
                    </a>
                </li>
            </ul>
        </div>
        
        <div class="sidebar-footer">
            <div class="user-info">
                <div class="d-flex align-items-center">
                    <div class="avatar bg-warning text-dark rounded-circle me-2 d-flex align-items-center justify-content-center" 
                         style="width: 32px; height: 32px;">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-bold">@User.Identity?.Name</div>
                        <small class="text-muted">Administrator</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="admin-content">
        <!-- Top Navigation -->
        <nav class="admin-navbar navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-link d-lg-none me-2" id="sidebarToggleMobile">
                    <i class="fas fa-bars"></i>
                </button>
                
                <div class="navbar-brand">
                    <span class="fw-bold">@ViewData["Title"]</span>
                </div>
                
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-bell me-1"></i>
                            <span class="badge bg-danger">3</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">Notifications</h6></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                System backup needed
                            </a></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="fas fa-user-plus text-success me-2"></i>
                                New user registered
                            </a></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="fas fa-flag text-danger me-2"></i>
                                Content reported
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">View all notifications</a></li>
                        </ul>
                    </div>
                    
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-shield me-1"></i>
                            @User.Identity?.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/">
                                <i class="fas fa-home me-2"></i>Back to Site
                            </a></li>
                            <li><a class="dropdown-item" href="/account/profile">
                                <i class="fas fa-user-edit me-2"></i>Edit Profile
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" action="/api/auth/logout" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Alerts -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mx-3 mt-3" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mx-3 mt-3" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Page Content -->
        <main class="admin-main p-4">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="admin-footer text-center py-3 border-top">
            <div class="container-fluid">
                <span class="text-muted">
                    &copy; @DateTime.Now.Year World Family Admin Panel | 
                    Version 1.0.0 | 
                    Server Time: @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm") UTC
                </span>
            </div>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>