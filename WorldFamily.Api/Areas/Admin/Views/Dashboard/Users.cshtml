@model IEnumerable<WorldFamily.Data.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-lg-8">
        <h2 class="mb-1">User Management</h2>
        <p class="text-muted">Manage user accounts, roles, and permissions.</p>
    </div>
    <div class="col-lg-4 text-end">
        <div class="btn-group">
            <button type="button" class="btn btn-primary" onclick="exportUserData('csv')">
                <i class="fas fa-download me-1"></i>Export CSV
            </button>
            <button type="button" class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" onclick="exportUserData('csv')">CSV Format</a></li>
                <li><a class="dropdown-item" href="#" onclick="exportUserData('excel')">Excel Format</a></li>
                <li><a class="dropdown-item" href="#" onclick="exportUserData('pdf')">PDF Report</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="dashboard-card">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-primary text-white">
                    <i class="fas fa-users"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">Total Users</div>
                    <div class="card-value">@ViewBag.TotalUsers</div>
                    <div class="card-change positive">
                        <i class="fas fa-arrow-up me-1"></i>
                        Active accounts
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="dashboard-card">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-success text-white">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">Active Today</div>
                    <div class="card-value">@(Random.Shared.Next(10, 50))</div>
                    <div class="card-change positive">
                        <i class="fas fa-arrow-up me-1"></i>
                        +@(Random.Shared.Next(2, 8)) from yesterday
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="dashboard-card">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-warning text-white">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">New This Week</div>
                    <div class="card-value">@(Random.Shared.Next(5, 20))</div>
                    <div class="card-change positive">
                        <i class="fas fa-arrow-up me-1"></i>
                        Registration trend
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="dashboard-card">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-info text-white">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">Administrators</div>
                    <div class="card-value">@ViewBag.AdminCount</div>
                    <div class="card-change">
                        <i class="fas fa-shield-alt me-1"></i>
                        System admins
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filters -->
<div class="admin-search-box">
    <form method="get" action="/admin/dashboard/users" class="row g-3 align-items-end">
        <div class="col-md-4">
            <label for="search" class="form-label">Search Users</label>
            <div class="input-group">
                <input type="text" class="form-control" id="search" name="search" 
                       value="@ViewBag.SearchTerm" placeholder="Name, email, or username...">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-3">
            <label for="role" class="form-label">Filter by Role</label>
            <select class="form-control" id="role" name="role" onchange="this.form.submit()">
                <option value="">All Roles</option>
                <option value="User" selected="@(ViewBag.RoleFilter == "User")">Users</option>
                <option value="Administrator" selected="@(ViewBag.RoleFilter == "Administrator")">Administrators</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="status" class="form-label">Filter by Status</label>
            <select class="form-control" id="status" name="status" onchange="this.form.submit()">
                <option value="">All Status</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
                <option value="locked">Locked</option>
            </select>
        </div>
        <div class="col-md-2">
            <a href="/admin/dashboard/users" class="btn btn-outline-secondary w-100">
                <i class="fas fa-undo me-1"></i>Clear
            </a>
        </div>
    </form>
</div>

<!-- Users Table -->
<div class="admin-table">
    <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <h5 class="mb-0">
            <i class="fas fa-users text-primary me-2"></i>
            Users (@ViewBag.TotalUsers total)
        </h5>
        <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-outline-secondary" onclick="selectAllUsers()">
                <i class="fas fa-check-square me-1"></i>Select All
            </button>
            <button type="button" class="btn btn-outline-warning" onclick="bulkAction('disable')" disabled id="bulkActionBtn">
                <i class="fas fa-ban me-1"></i>Bulk Disable
            </button>
        </div>
    </div>
    
    <div class="table-responsive">
        <table class="table admin-datatable">
            <thead>
                <tr>
                    <th width="50">
                        <input type="checkbox" class="form-check-input" id="selectAll" onchange="toggleSelectAll()">
                    </th>
                    <th>User</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Families</th>
                    <th>Status</th>
                    <th>Last Login</th>
                    <th>Registered</th>
                    <th width="120">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    @foreach (var user in Model)
                    {
                        <tr data-user-id="@user.Id">
                            <td>
                                <input type="checkbox" class="form-check-input user-checkbox" value="@user.Id">
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar me-3">
                                        @(user.FirstName?.Substring(0, 1) ?? "U")
                                    </div>
                                    <div>
                                        <div class="fw-bold">@user.FirstName @user.LastName</div>
                                        <small class="text-muted">@@@user.UserName</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span>@user.Email</span>
                                @if (user.EmailConfirmed)
                                {
                                    <i class="fas fa-check-circle text-success ms-1" title="Email confirmed"></i>
                                }
                                else
                                {
                                    <i class="fas fa-exclamation-triangle text-warning ms-1" title="Email not confirmed"></i>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">User</span>
                            </td>
                            <td>
                                <span class="badge bg-primary">@(user.CreatedFamilies?.Count ?? 0)</span>
                            </td>
                            <td>
                                @{
                                    var isActive = user.LockoutEnd == null || user.LockoutEnd < DateTime.UtcNow;
                                }
                                <span class="status-badge @(isActive ? "status-active" : "status-inactive")">
                                    @(isActive ? "Active" : "Locked")
                                </span>
                            </td>
                            <td>
                                @if (user.LastLoginAt.HasValue)
                                {
                                    <span title="@user.LastLoginAt.Value.ToString("yyyy-MM-dd HH:mm:ss")">
                                        @GetTimeAgo(user.LastLoginAt.Value)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </td>
                            <td>
                                <span title="@user.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")">
                                    @user.CreatedAt.ToString("MMM dd, yyyy")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="action-btn action-btn-primary" 
                                            onclick="viewUserDetails('@user.Id')" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button type="button" class="action-btn action-btn-warning" 
                                            onclick="editUser('@user.Id')" title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    @if (isActive)
                                    {
                                        <button type="button" class="action-btn action-btn-danger" 
                                                onclick="toggleUserStatus('@user.Id', 'lock')" title="Lock User">
                                            <i class="fas fa-lock"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="action-btn action-btn-success" 
                                                onclick="toggleUserStatus('@user.Id', 'unlock')" title="Unlock User">
                                            <i class="fas fa-unlock"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <div class="h5">No users found</div>
                            <p class="text-muted">No users match your current search criteria.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Users pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter">
                        <i class="fas fa-chevron-left"></i> Previous
                    </a>
                </li>
            }
            
            @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter">@i</a>
                </li>
            }
            
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter">
                        Next <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
}

@functions {
    string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;
        
        if (timeSpan.TotalDays > 7)
            return dateTime.ToString("MMM dd, yyyy");
        else if (timeSpan.TotalDays >= 1)
            return $"{(int)timeSpan.TotalDays} days ago";
        else if (timeSpan.TotalHours >= 1)
            return $"{(int)timeSpan.TotalHours} hours ago";
        else if (timeSpan.TotalMinutes >= 1)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        else
            return "Just now";
    }
}
