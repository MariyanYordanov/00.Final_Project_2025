@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Dashboard Header -->
<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-1">Dashboard Overview</h2>
        <p class="text-muted">Welcome back! Here's what's happening with World Family.</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card fade-in-up">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-primary text-white">
                    <i class="fas fa-users"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">Total Users</div>
                    <div class="card-value">@ViewBag.Stats.TotalUsers</div>
                    <div class="card-change positive">
                        <i class="fas fa-arrow-up me-1"></i>
                        +@ViewBag.Stats.NewUsersToday today
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card fade-in-up">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-success text-white">
                    <i class="fas fa-home"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">Total Families</div>
                    <div class="card-value">@ViewBag.Stats.TotalFamilies</div>
                    <div class="card-change positive">
                        <i class="fas fa-arrow-up me-1"></i>
                        +@ViewBag.Stats.NewFamiliesToday today
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card fade-in-up">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-info text-white">
                    <i class="fas fa-user-friends"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">Family Members</div>
                    <div class="card-value">@ViewBag.Stats.TotalMembers</div>
                    <div class="card-change positive">
                        <i class="fas fa-arrow-up me-1"></i>
                        +@(Random.Shared.Next(5, 25)) this week
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card fade-in-up">
            <div class="d-flex align-items-center">
                <div class="card-icon stats-warning text-white">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="card-title">Active Users</div>
                    <div class="card-value">@ViewBag.Stats.ActiveUsersWeek</div>
                    <div class="card-change positive">
                        <i class="fas fa-arrow-up me-1"></i>
                        This week
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="chart-container">
            <h5><i class="fas fa-chart-area text-primary me-2"></i>Growth Overview</h5>
            <canvas id="growthChart" height="100"></canvas>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="chart-container">
            <h5><i class="fas fa-chart-pie text-success me-2"></i>User Distribution</h5>
            <canvas id="userChart" height="200"></canvas>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row mb-4">
    <!-- Recent Activity -->
    <div class="col-lg-6">
        <div class="dashboard-card">
            <h5 class="mb-3">
                <i class="fas fa-clock text-info me-2"></i>
                Recent Activity
            </h5>
            
            <div class="activity-list">
                <div class="activity-item">
                    <div class="activity-icon bg-success text-white">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">New user registered</div>
                        <div class="activity-time">John Smith joined 2 hours ago</div>
                    </div>
                </div>
                
                <div class="activity-item">
                    <div class="activity-icon bg-primary text-white">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">New family created</div>
                        <div class="activity-time">Johnson Family tree created 4 hours ago</div>
                    </div>
                </div>
                
                <div class="activity-item">
                    <div class="activity-icon bg-warning text-white">
                        <i class="fas fa-images"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Photos uploaded</div>
                        <div class="activity-time">15 new photos added today</div>
                    </div>
                </div>
                
                <div class="activity-item">
                    <div class="activity-icon bg-info text-white">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Stories shared</div>
                        <div class="activity-time">3 family stories published today</div>
                    </div>
                </div>
                
                <div class="activity-item">
                    <div class="activity-icon bg-danger text-white">
                        <i class="fas fa-flag"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Content flagged</div>
                        <div class="activity-time">Photo reported for review yesterday</div>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <a href="/admin/activity" class="btn btn-outline-primary">
                    <i class="fas fa-list me-1"></i>View All Activity
                </a>
            </div>
        </div>
    </div>
    
    <!-- System Health -->
    <div class="col-lg-6">
        <div class="dashboard-card">
            <h5 class="mb-3">
                <i class="fas fa-server text-success me-2"></i>
                System Health
            </h5>
            
            <div class="health-metrics">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Database Status</span>
                    <span>
                        <span class="health-indicator health-good"></span>
                        Online
                    </span>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Server Uptime</span>
                    <span>@TimeSpan.FromMilliseconds(ViewBag.HealthInfo.Uptime).ToString(@"dd\:hh\:mm")</span>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Memory Usage</span>
                    <span>@ViewBag.HealthInfo.MemoryUsage MB</span>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Last Backup</span>
                    <span>
                        <span class="health-indicator health-good"></span>
                        6 hours ago
                    </span>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Errors (24h)</span>
                    <span>
                        <span class="health-indicator health-good"></span>
                        0 critical
                    </span>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Storage Used</span>
                    <span>1.2 GB / 10 GB</span>
                </div>
            </div>
            
            <div class="progress mb-3" style="height: 8px;">
                <div class="progress-bar bg-success" role="progressbar" style="width: 12%" aria-valuenow="12" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            
            <div class="text-center">
                <a href="/admin/dashboard/settings" class="btn btn-outline-success">
                    <i class="fas fa-tools me-1"></i>System Settings
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Families -->
<div class="row">
    <div class="col-12">
        <div class="admin-table">
            <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-home text-primary me-2"></i>
                    Recent Families
                </h5>
                <a href="/admin/dashboard/families" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-eye me-1"></i>View All
                </a>
            </div>
            
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Family Name</th>
                            <th>Creator</th>
                            <th>Members</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.RecentFamilies != null)
                        {
                            @foreach (var family in (IEnumerable<dynamic>)ViewBag.RecentFamilies)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-users text-primary me-2"></i>
                                            <strong>@family.Name Family</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar me-2">
                                                @(family.CreatedBy?.FirstName?.Substring(0, 1) ?? "U")
                                            </div>
                                            @(family.CreatedBy?.FirstName + " " + family.CreatedBy?.LastName ?? "Unknown")
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@(family.Members?.Count ?? 0)</span>
                                    </td>
                                    <td>@family.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="status-badge @(family.IsActive ? "status-active" : "status-inactive")">
                                            @(family.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/FamilyMvc/Details/@family.Id" class="action-btn action-btn-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" class="action-btn action-btn-warning" onclick="editFamily(@family.Id)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="action-btn action-btn-danger" onclick="toggleFamilyStatus(@family.Id)">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                                    <div>No recent families</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Growth Chart
        const growthCtx = document.getElementById('growthChart').getContext('2d');
        const growthChart = new Chart(growthCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'New Families',
                    data: [12, 19, 15, 25, 22, 30, 28, 35, 32, 40, 38, 45],
                    borderColor: '#667eea',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }, {
                    label: 'New Users',
                    data: [20, 35, 28, 45, 38, 52, 48, 60, 55, 70, 65, 80],
                    borderColor: '#56ab2f',
                    backgroundColor: 'rgba(86, 171, 47, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // User Distribution Chart
        const userCtx = document.getElementById('userChart').getContext('2d');
        const userChart = new Chart(userCtx, {
            type: 'doughnut',
            data: {
                labels: ['Regular Users', 'Premium Users', 'Administrators'],
                datasets: [{
                    data: [85, 12, 3],
                    backgroundColor: ['#667eea', '#56ab2f', '#f093fb'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Family Actions
        function editFamily(familyId) {
            window.location.href = `/admin/families/edit/${familyId}`;
        }

        function toggleFamilyStatus(familyId) {
            if (confirm('Are you sure you want to toggle this family\'s status?')) {
                fetch('/admin/dashboard/ToggleFamilyStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ familyId: familyId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Family status updated successfully', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showToast('Failed to update family status', 'error');
                    }
                })
                .catch(error => {
                    showToast('An error occurred', 'error');
                });
            }
        }

        // Auto-refresh dashboard every 5 minutes
        setInterval(() => {
            location.reload();
        }, 300000);
    </script>
}