@model WorldFamily.Data.Models.Family
@{
    ViewData["Title"] = $"{Model.Name} Family";
}

<!-- Hero Section -->
<section class="bg-gradient text-white py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb text-white-50">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-white-50">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/FamilyMvc/Browse" class="text-white-50">Families</a>
                        </li>
                        <li class="breadcrumb-item active text-white">@Model.Name</li>
                    </ol>
                </nav>
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-users me-2"></i>
                    @Model.Name Family
                </h1>
                <p class="lead mb-0">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        @Model.Description
                    }
                    else
                    {
                        <span>Discover the heritage and stories of the @Model.Name family.</span>
                    }
                </p>
            </div>
            <div class="col-lg-4 text-end">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="btn-group">
                        @if (Model.CreatedByUserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        {
                            <a href="/FamilyMvc/Edit/@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Edit Family
                            </a>
                        }
                        <button type="button" class="btn btn-light" onclick="inviteMembers(@Model.Id)">
                            <i class="fas fa-user-plus me-1"></i>Invite Members
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Family Stats -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-users fa-2x text-primary mb-2"></i>
                        <h4 class="card-title">@ViewBag.MemberCount</h4>
                        <p class="card-text text-muted">Family Members</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-layer-group fa-2x text-success mb-2"></i>
                        <h4 class="card-title">@ViewBag.GenerationCount</h4>
                        <p class="card-text text-muted">Generations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-images fa-2x text-warning mb-2"></i>
                        <h4 class="card-title">@(Model.Photos?.Count ?? 0)</h4>
                        <p class="card-text text-muted">Photos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-book-open fa-2x text-info mb-2"></i>
                        <h4 class="card-title">@(Model.Stories?.Count ?? 0)</h4>
                        <p class="card-text text-muted">Stories</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Family Information -->
            <div class="col-lg-8">
                
                <!-- Family Description -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                About Our Family
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    </div>
                }

                <!-- Family Members -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-users text-primary me-2"></i>
                            Family Members
                        </h5>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="/Members/Create?familyId=@Model.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-plus me-1"></i>Add Member
                            </a>
                        }
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Members != null && ((IEnumerable<dynamic>)ViewBag.Members).Any())
                        {
                            <div class="row g-3">
                                @foreach (var member in (IEnumerable<dynamic>)ViewBag.Members)
                                {
                                    <div class="col-md-6 col-lg-4">
                                        <div class="member-card">
                                            <div class="d-flex align-items-center">
                                                <div class="member-avatar bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" 
                                                     style="width: 50px; height: 50px;">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">
                                                        <a href="/Members/Details/@member.Id" class="text-decoration-none">
                                                            @member.FirstName @member.LastName
                                                        </a>
                                                    </h6>
                                                    <small class="text-muted">
                                                        @if (member.DateOfBirth != null)
                                                        {
                                                            var age = DateTime.Now.Year - member.DateOfBirth.Year;
                                                            <span>Age @age</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Family Member</span>
                                                        }
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-user-plus fa-3x text-muted mb-3"></i>
                                <h5>No family members yet</h5>
                                <p class="text-muted">Start building your family tree by adding the first member.</p>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a href="/Members/Create?familyId=@Model.Id" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Add First Member
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Recent Photos -->
                @if (Model.Photos?.Any() == true)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-images text-warning me-2"></i>
                                Recent Photos
                            </h5>
                            <a href="/FamilyMvc/Gallery/@Model.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-eye me-1"></i>View All
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                @foreach (var photo in Model.Photos.Take(6))
                                {
                                    <div class="col-md-4">
                                        <div class="photo-thumbnail">
                                            <img src="@photo.ImageUrl" alt="@photo.Title" class="img-fluid rounded shadow-sm" 
                                                 style="height: 150px; width: 100%; object-fit: cover;">
                                            <div class="photo-overlay">
                                                <h6 class="text-white">@photo.Title</h6>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Recent Stories -->
                @if (Model.Stories?.Any() == true)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-book-open text-info me-2"></i>
                                Family Stories
                            </h5>
                            <a href="/Stories?familyId=@Model.Id" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-book me-1"></i>All Stories
                            </a>
                        </div>
                        <div class="card-body">
                            @foreach (var story in Model.Stories.Take(3))
                            {
                                <div class="story-item mb-3 pb-3 @(story != Model.Stories.Take(3).Last() ? "border-bottom" : "")">
                                    <h6 class="story-title">
                                        <a href="/Stories/Details/@story.Id" class="text-decoration-none">
                                            @story.Title
                                        </a>
                                    </h6>
                                    <p class="story-excerpt text-muted mb-2">
                                        @(story.Content.Length > 150 ? story.Content.Substring(0, 150) + "..." : story.Content)
                                    </p>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>@story.CreatedAt.ToString("MMMM dd, yyyy")
                                        <i class="fas fa-user ms-3 me-1"></i>By Member
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                
                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-bolt text-warning me-2"></i>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/FamilyMvc/Tree/@Model.Id" class="btn btn-outline-success">
                                <i class="fas fa-project-diagram me-2"></i>View Family Tree
                            </a>
                            @if (Model.Photos?.Any() == true)
                            {
                                <a href="/FamilyMvc/Gallery/@Model.Id" class="btn btn-outline-warning">
                                    <i class="fas fa-images me-2"></i>Photo Gallery
                                </a>
                            }
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a href="/Stories/Create?familyId=@Model.Id" class="btn btn-outline-info">
                                    <i class="fas fa-plus me-2"></i>Add Story
                                </a>
                                <a href="/Photos/Upload?familyId=@Model.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-upload me-2"></i>Upload Photos
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!-- Family Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-info text-primary me-2"></i>
                            Family Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="info-item mb-3">
                            <strong>Created:</strong>
                            <span class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                        </div>
                        <div class="info-item mb-3">
                            <strong>Founder:</strong>
                            <span class="text-muted">@(Model.CreatedBy?.FirstName + " " + Model.CreatedBy?.LastName ?? "Unknown")</span>
                        </div>
                        <div class="info-item mb-3">
                            <strong>Privacy:</strong>
                            <span class="badge @(Model.IsPublic ? "bg-success" : "bg-warning")">
                                @(Model.IsPublic ? "Public" : "Private")
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Share Family -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-share-alt text-success me-2"></i>
                            Share This Family
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">Share this family tree with others:</p>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" readonly 
                                   value="@($"{Context.Request.Scheme}://{Context.Request.Host}/FamilyMvc/Details/{Model.Id}")"
                                   id="shareUrl">
                            <button class="btn btn-outline-secondary" type="button" onclick="copyShareUrl()">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary btn-sm flex-fill" onclick="shareOnFacebook()">
                                <i class="fab fa-facebook me-1"></i>Facebook
                            </a>
                            <a href="#" class="btn btn-outline-info btn-sm flex-fill" onclick="shareOnTwitter()">
                                <i class="fab fa-twitter me-1"></i>Twitter
                            </a>
                            <a href="#" class="btn btn-outline-success btn-sm flex-fill" onclick="shareViaEmail()">
                                <i class="fas fa-envelope me-1"></i>Email
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>