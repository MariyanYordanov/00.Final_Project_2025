@model WorldFamily.Data.Models.Family
@{
    ViewData["Title"] = "Create New Family";
}

<!-- Hero Section -->
<section class="bg-gradient text-white py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb text-white-50">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-white-50">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/FamilyMvc/Browse" class="text-white-50">Families</a>
                        </li>
                        <li class="breadcrumb-item active text-white">Create Family</li>
                    </ol>
                </nav>
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-plus-circle me-2"></i>
                    Create New Family Tree
                </h1>
                <p class="lead mb-0">
                    Start building your family heritage and connect with your loved ones.
                </p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-family fa-6x opacity-75"></i>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                
                <!-- Instructions -->
                <div class="alert alert-info border-0 shadow-sm mb-5">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-info-circle fa-2x text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="alert-heading">Getting Started</h5>
                            <p class="mb-2">Creating a family tree is easy! Follow these simple steps:</p>
                            <ol class="mb-0">
                                <li>Give your family a name and description</li>
                                <li>Set privacy preferences</li>
                                <li>Add family members and their relationships</li>
                                <li>Upload photos and share stories</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <!-- Create Family Form -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h4 class="mb-0">
                            <i class="fas fa-edit text-primary me-2"></i>
                            Family Information
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        
                        <form asp-action="Create" method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            
                            <!-- Family Name -->
                            <div class="mb-4">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="fas fa-users text-primary me-1"></i>
                                    Family Name *
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" 
                                       placeholder="e.g., The Johnson Family" 
                                       data-field-name="Family name" required>
                                <div class="form-text">
                                    This will be the main name displayed for your family tree.
                                </div>
                                <span asp-validation-for="Name" class="invalid-feedback"></span>
                            </div>

                            <!-- Family Description -->
                            <div class="mb-4">
                                <label asp-for="Description" class="form-label fw-bold">
                                    <i class="fas fa-align-left text-success me-1"></i>
                                    Family Description
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="4" 
                                         placeholder="Tell the story of your family. Where did it begin? What makes your family special? Share your heritage, traditions, and values..."
                                         maxlength="1000"></textarea>
                                <div class="form-text">
                                    <span id="descriptionCount">0</span>/1000 characters. This helps others understand your family's story.
                                </div>
                                <span asp-validation-for="Description" class="invalid-feedback"></span>
                            </div>

                            <!-- Family Location -->
                            <div class="mb-4">
                                <label for="location" class="form-label fw-bold">
                                    <i class="fas fa-map-marker-alt text-warning me-1"></i>
                                    Family Origin (Optional)
                                </label>
                                <input type="text" class="form-control" id="location" name="Location" 
                                       placeholder="e.g., Sofia, Bulgaria or New York, USA">
                                <div class="form-text">
                                    Where did your family originate or where are you primarily located?
                                </div>
                            </div>

                            <!-- Established Date -->
                            <div class="mb-4">
                                <label for="establishedDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar text-info me-1"></i>
                                    Family Established Date (Optional)
                                </label>
                                <input type="date" class="form-control" id="establishedDate" name="EstablishedDate">
                                <div class="form-text">
                                    When was this family line established or when did it arrive in your current location?
                                </div>
                            </div>

                            <!-- Privacy Settings -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-shield-alt text-danger me-1"></i>
                                    Privacy Settings
                                </label>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="radio" name="IsPublic" id="privacyPrivate" value="false" checked>
                                            <label class="form-check-label" for="privacyPrivate">
                                                <strong>Private Family</strong>
                                                <div class="text-muted small">
                                                    Only invited family members can view your tree. You control who has access.
                                                </div>
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="IsPublic" id="privacyPublic" value="true">
                                            <label class="form-check-label" for="privacyPublic">
                                                <strong>Public Family</strong>
                                                <div class="text-muted small">
                                                    Anyone can discover and view your family tree. Great for connecting with distant relatives.
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Family Photo Upload -->
                            <div class="mb-4">
                                <label for="familyPhoto" class="form-label fw-bold">
                                    <i class="fas fa-image text-purple me-1"></i>
                                    Family Photo (Optional)
                                </label>
                                <input type="file" class="form-control" id="familyPhoto" name="FamilyPhoto" 
                                       accept="image/*" onchange="previewFamilyPhoto(this)">
                                <div class="form-text">
                                    Upload a representative photo for your family (family portrait, coat of arms, etc.)
                                </div>
                                
                                <!-- Photo Preview -->
                                <div id="photoPreview" class="mt-3" style="display: none;">
                                    <div class="card" style="max-width: 300px;">
                                        <img id="previewImage" class="card-img-top" style="height: 200px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="removePhoto()">
                                                <i class="fas fa-trash me-1"></i>Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Terms and Conditions -->
                            <div class="mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label" for="agreeTerms">
                                        I agree to the <a href="/privacy" target="_blank">Privacy Policy</a> and 
                                        <a href="/terms" target="_blank">Terms of Service</a> *
                                    </label>
                                    <div class="invalid-feedback">
                                        You must agree to the terms and conditions.
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Buttons -->
                            <div class="d-flex justify-content-between">
                                <a href="/FamilyMvc/Browse" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-save me-2"></i>Create Family Tree
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- What's Next Section -->
                <div class="card border-0 shadow-sm mt-5">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-route me-2"></i>
                            What's Next?
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">After creating your family tree, you'll be able to:</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-user-plus text-primary fa-lg me-3 mt-1"></i>
                                    <div>
                                        <h6>Add Family Members</h6>
                                        <small class="text-muted">Start with yourself and add parents, siblings, and children.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-images text-warning fa-lg me-3 mt-1"></i>
                                    <div>
                                        <h6>Upload Photos</h6>
                                        <small class="text-muted">Share family photos and create memorable galleries.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-book-open text-info fa-lg me-3 mt-1"></i>
                                    <div>
                                        <h6>Share Stories</h6>
                                        <small class="text-muted">Document family history, traditions, and memories.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-share-alt text-success fa-lg me-3 mt-1"></i>
                                    <div>
                                        <h6>Invite Relatives</h6>
                                        <small class="text-muted">Invite family members to contribute and collaborate.</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 

    